<div class="container">
	<div class="page-header">
		<h1>Data Collection Form <small>Please answer all quesitons</small></h1>
	</div>
	<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus, consectetur saepe, recusandae dolorem mollitia earum beatae, blanditiis incidunt ipsam veritatis quod, odio necessitatibus quos quidem nesciunt sunt at provident magni.</p>

	<%= form_for @record do |f| %>

	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Inquiry format</h3>
		</div>
		<div class="panel-body">
			<!-- Question 1 -->
			<%= f.label :contact_type, "How is the inquiry recieved?" %> <br>
			<div class="radio-inline">
				<%= f.radio_button :contact_type, "phone" %>
				<%= f.label :contact_type, "By phone", :value=>"phone", :style=>'none' %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :contact_type, "email" %>
				<%= f.label :contact_type, "By e-mail", :value=>"email" %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :contact_type, "person", :checked => true %>
				<%= f.label :contact_type, "In person", :value=>"person" %>
			</div>
			<br>
			<br>
			
			<!-- Question 2 -->
			<%= f.label :patron, "Tell us about the patron." %> <br>
			<div class="radio-inline">
				<%= f.radio_button :patron, "student", :checked => true %>
				<%= f.label :patron, "Student", :value=>"student" %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :patron, "faculty" %>
				<%= f.label :patron, "Faculty member", :value=>"faculty" %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :patron, "other" %>
				<%= f.label :patron, "Other", :value=>"other" %>
			</div>

		</div>
	</div>

	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Inquiry detail</h3>
		</div>
		<div class="panel-body">
			<!-- Question 3 -->
			<%= f.label :question, "What is the Inquiry about?" %> <br>
			<%= f.select :question, [['Please choice one of the following...', '', :selected=>true,:disabled=>true],['General Inquiries','general'],['Technical Issues','techincal'],['Career Advice','career'],['Academic & Researches','research'],['Other','other']], {},:class=>'form-control' %>
			<br>
		
			<%= f.text_area :question, :id=>"research-textbox", :placeholder=>"Please fill in course code.", :hidden=>true, :class=>"form-control" %>
			<%= f.text_area :question, :id=>"other-textbox", :placeholder=>"Please fill in details.", :hidden=>true, :class=>"form-control" %>

<!-- 			<%#= f.label :question, "What is the Inquiry about?" %> <br>
			<div class="radio container">
				<%#= f.radio_button :question, "general" %>
				<%#= f.label :question, "General", :value=>"general" %>
			</div>
			<div class="radio container">
				<%#= f.radio_button :question, "technical" %>
				<%#= f.label :question, "Technical", :value=>"technical" %>
			</div>	
			<div class="radio container">
				<%#= f.radio_button :question, "acedemic" %>
				<%#= f.label :question, "Research", :value=>"acedemic" %>
				<%#= f.text_field :question, :placeholder=>"Course code" %>
			</div>	
			<div class="radio container">
				<%#= f.radio_button :question, "other" %>
				<%#= f.label :question, "Other", :value=>"other" %>
				<%#= f.text_field :question %>
			</div> -->
			<br>
			<!-- Question 4 -->
			<%= f.label :time_spent, "How long did it take you to resolve patron's question?" %> <br>
			<div class="radio-inline">
				<%= f.radio_button :time_spent, 3, :checked=>true %>
				<%= f.label :time_spent, "3 mins or less", :value=>3 %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :time_spent, 20 %>
				<%= f.label :time_spent, "Bewteen 3 to 20 mins", :value=>20 %>
			</div>	
			<div class="radio-inline">
				<%= f.radio_button :time_spent, 30 %>
				<%= f.label :time_spent, "More than 30 mins", :value=>30 %>
			</div>
		</div>
	</div>

	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Lab resources</h3>
		</div>
		<div class="panel-body">
			<div class="checkbox-inline">
				<%= f.check_box :bloomberg %>
				<%= f.label :bloomberg, image_tag('Bloomberg.png', :height=>'50px') %>
			</div>
			<div class="checkbox-inline">
				<%= f.check_box :capital_iq %>
				<%= f.label :capital_iq, image_tag('capIQ.png', :height=>'50px') %>
			</div>
			<div class="checkbox-inline">
				<%= f.check_box :factset %>
				<%= f.label :factset, image_tag('factsetlogo.png', :height=>'50px') %>
			</div>
			<div class="checkbox-inline">
				<%= f.check_box :thomsonone %>
				<%= f.label :thomsonone, image_tag('thomson.jpeg', :height=>'50px') %>
			</div>
			<div class="checkbox-inline">
				<%= f.check_box :other %>
				<%= f.text_area :other, :placeholder=>"Other...", :class=>"form-control" %>
			</div>
		</div>
	</div>
	
	<!-- Question 6 -->
	<%= f.label :satisfaction, "Was the patron satisfied?" %> <br>
	<div class="radio-inline">
		<%= f.radio_button :satisfaction, 'yes' %>
		<%= f.label :satisfaction, "Yes", :value=>'yes' %>
	</div>
	<div class="radio-inline">
		<%= f.radio_button :satisfaction, 'no' %>
		<%= f.label :satisfaction, "No", :value=>'no' %>
	</div>	
	<br>

	<%= f.submit "Save", :class=>"btn btn-primary btn-lg" %>
	
	<% end %>


</div> <!-- container -->

